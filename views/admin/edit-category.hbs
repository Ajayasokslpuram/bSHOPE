								<input type="text" value="{{category.name}}" class="form-control" id="name" name="name" placeholder="Enter Category Name">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
                                 <label class="m-3"> Description</label>
								<input class="form-control" value="{{category.description}}" name="description" id="description" rows="1" placeholder="Enter Description"></input>
							</div>
						</div>
						
						<div class="col-md-12 text-right">
							<button type="submit" value="submit" class="btn btn-inverse-danger">Edit Category</button>
						</div>

