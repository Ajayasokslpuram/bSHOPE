<div class="container mt-5 mb-5">
    <table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
     {{#each users}}
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <div class="ms-0">
            <p class="fw-bold mb-1">{{this.name}}</p>
            <p class="text-muted mb-0"></p>
          </div>
        </div>
      </td>
      <td>
        <p class="fw-normal mb-1">{{this.email}}</p>
      </td>
      <td>
      
         {{#if this.isBlocked}}
        <span class="badge badge-warning rounded-pill d-inline">Blocked</span>
        {{else}}
          <span class="badge badge-success rounded-pill d-inline">Active</span>
          {{/if}}
      </td>
      <td>
        {{#if this.isBlocked}}
     
        <a type="button"href="/admin/unblockuser/{{this._id}}" class="badge badge-success btn btn-sm btn-rounded">
         Unblock
        </a>
         {{else}}
         <a type="button"href="/admin/blockuser/{{this._id}}" class=" badge badge-warning btn btn-sm btn-rounded">
          b l o c k
        </a> 
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>