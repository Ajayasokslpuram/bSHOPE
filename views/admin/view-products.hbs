<div class="container mb-5">
 <div class="p-5 m-2 checkout_btn_inner d-flex align-items-center ">
                                      
                                        <a class="primary-btn" href="/admin/addproducts">Add Products</a>
</div>

<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <img
              src="/product-images/{{this._id}}.jpg"
              alt=""
              style="width: 60px; height: 60px"
              />
        </div>
      </td>
      <td>
          <div class="ms-0">
              <p class="fw-bold mb-1">{{this.name}}</p>
              <p class="text-muted mb-0">{{this.description}}</p>
            </div>
      </td>
      <td>
        <p class="fw-normal mb-1">{{this.price}}</p>
        <p class="text-muted mb-0">{{this.category}}</p>
      </td>
      <td>
        <span class="badge badge-success rounded-pill d-inline">Active</span>
      </td>
      <td>{{this.quantity}}</td>
      <td>
        <a type="button" href="/admin/edit-product/{{this._id}}" class="btn btn-sm btn-rounded">
          Edit
        </a>
        <a  href="/admin/delete-product/{{this._id}}" class="btn btn-sm btn-rounded" onclick="return confirm('Do You Want To Delete {{this.name}}?')">
          DELETE
        </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>