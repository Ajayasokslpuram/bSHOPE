<div class="main-panel">
	<div class="content-wrapper">
		<div class="page-header">
			<h3 class="page-title">Manage Banners</h3>
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="#">Tables</a></li>
					<li class="breadcrumb-item active" aria-current="page"> Basic tables </li>
				</ol>
			</nav>
		</div>
		<div class="row">


			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body col-md-8 ">
						<h3 class="page-title m-3">Add Banner</h3>

						<form class="contact_form p-2" enctype="multipart/form-data" action="/admin/addbanner"
							method="post" id="contactForm" novalidate="novalidate">
							<div class="col-md-6">
								<div class="form-group">
									<input type="text" class="form-control" id="name" name="name"
										placeholder="Enter Banner/offer name" onfocus="this.placeholder = ''"
										onblur="this.placeholder = 'Enter Offer/Banner Name'">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<textarea class="form-control" name="description" id="message" rows="1"
										placeholder="Description" onfocus="this.placeholder = ''"
										onblur="this.placeholder = 'Minimum 27 words'"></textarea>
								</div>
							</div>

							<div class="d-flex row">
								<div class="col-md-6">
									<label for="formFileLg" class="form-label  ml-3 mt-2"><small>Select First
											Image</small> </label>
									<input name="image"
										class="form-control form-control-lg btn btn-inverse-warning  ml-3 "
										id="formFileLg" type="file" />
								</div>



								<div class=" mt-5 col-md-4 col-xs-5">
									<select name="category" class="btn btn-inverse dropdown-toggle">
										<option value="" disabled selected>Choose Category</option>
										{{#each categories}}
										<option value="{{this.name}}">{{this.name}}</option>
										{{/each}}
									</select>
								</div>

							</div>

							<div class="col-md-10 text-right mt-3">
								<button type="submit" value="submit" class="btn btn-inverse-success">Add Banner</button>
							</div>


						</form>

					</div>
				</div>

			</div>
		</div>
		<div class="row">


			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body col-md-8 ">
							<h3 class="page-title m-3">Set Banner</h3>
						<table class="table  align-middle mb-0 bg-white mb-5">
							<thead class="bg-light">
								<tr>
									<th>Image</th>
									<th>Banner Name</th>
									
									<th>Status</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								{{#each banners}}
								<tr>
									
										<td class="py-1">
                                            <img src="/banner-images/{{this._id}}.jpg" alt=""
                                                style="width: 60px; height: 60px" />
                                        </td>

									<td>
										<div class="d-flex align-items-center">
											<p class="fw-bold mb-1">{{this.name}}</p>
										</div>
									</td>
									
									<td>
										{{#if this.isActive}}
										<span class="badge badge-success rounded-pill d-inline">Active</span>
										{{else}}
										<span class="badge badge-danger rounded-pill d-inline">Available</span>
										{{/if}}
									</td>
									
									<td>
										<a href="/admin/set-bannner/{{this._id}}" class="btn btn-sm btn-rounded"
											onclick="return confirm('Do You Want set {{this.name}} as bannner?')">
											Set
										</a>
										<a href="/admin/edit-category/{{this._id}}" class="btn btn-sm btn-rounded"
										onclick="return confirm('Do You Want to Delete {{this.name}}?')">
											Remove
										</a>
									</td>
								</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>